@model List<LecturerClaimsSystem.Models.PaymentReport>
@{
    ViewData["Title"] = "Payment Reports";
    var role = ViewBag.Role as string ?? "HR Manager";
}

<style>
    body {
        background-color: #2D2D30;
        color: white;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
    }

    .header {
        background-color: #252526;
        padding: 10px;
        border-bottom: 1px solid #007ACC;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
    }

    .nav-tabs {
        background-color: #252526;
        padding: 0 20px;
    }

    .content {
        max-width: 1200px;
        margin: 20px auto;
        padding: 0 20px;
    }

    .btn-logout {
        background-color: #007ACC;
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        border-radius: 4px;
    }

    .nav-tab {
        display: inline-block;
        padding: 10px 20px;
        background-color: #252526;
        color: white;
        text-decoration: none;
        border: 1px solid transparent;
        cursor: pointer;
    }

        .nav-tab.active {
            background-color: #2D2D30;
            border-color: #007ACC;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #1E1E1E;
        margin: 20px 0;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #3E3E42;
    }

    th {
        background-color: #252526;
    }

    .btn-primary {
        background-color: #007ACC;
        color: white;
        border: none;
        padding: 8px 15px;
        cursor: pointer;
        border-radius: 4px;
        margin-right: 5px;
        text-decoration: none;
        display: inline-block;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        font-weight: bold;
        border-radius: 4px;
    }

    .report-generator {
        background-color: #252526;
        padding: 20px;
        border-radius: 8px;
        margin: 20px 0;
        border: 1px solid #3E3E42;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        color: white;
        font-weight: bold;
    }

    input, select {
        width: 100%;
        background-color: #3E3E42;
        color: white;
        border: 1px solid #007ACC;
        padding: 8px;
        border-radius: 4px;
    }

    .alert {
        padding: 10px;
        margin: 10px 0;
        border-radius: 5px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .no-reports {
        text-align: center;
        padding: 40px;
        color: #ccc;
        background-color: #1E1E1E;
        border-radius: 5px;
        margin: 20px 0;
    }
</style>

<div class="header">
    <div class="header-content">
        <h2>HR Manager Dashboard</h2>
        <div>Payment Reports & Invoice Generation</div>
        <a href="/Account/Logout" class="btn-logout">Logout</a>
    </div>
</div>

<div class="nav-tabs">
    <a href="@Url.Action("Index", "Hr")" class="nav-tab">Dashboard</a>
    <a href="@Url.Action("Lecturers", "Hr")" class="nav-tab">Lecturer Management</a>
    <a href="javascript:void(0)" class="nav-tab active">Payment Reports</a>
</div>

<div class="content">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <h3>Payment Reports</h3>

    <!-- Report Generator -->
    <div class="report-generator">
        <h4>Generate New Payment Report</h4>
        <form method="post" action="@Url.Action("GeneratePaymentReport", "Hr")">
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
                <div class="form-group">
                    <label for="periodStart">Period Start:</label>
                    <input type="date" id="periodStart" name="periodStart" value="@DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd")" required />
                </div>
                <div class="form-group">
                    <label for="periodEnd">Period End:</label>
                    <input type="date" id="periodEnd" name="periodEnd" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                </div>
            </div>
            <button type="submit" class="btn-success">Generate Payment Report</button>
        </form>
    </div>

    <!-- Reports List -->
    <h4>Generated Reports</h4>
    @if (Model.Count == 0)
    {
        <div class="no-reports">
            <p>No payment reports generated yet.</p>
            <p>Use the form above to generate your first report.</p>
        </div>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Report Name</th>
                    <th>Period</th>
                    <th>Total Amount</th>
                    <th>Total Claims</th>
                    <th>Generated By</th>
                    <th>Date Generated</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var report in Model)
                {
                    <tr>
                        <td>@report.ReportName</td>
                        <td>@report.PeriodStart.ToString("yyyy-MM-dd") to @report.PeriodEnd.ToString("yyyy-MM-dd")</td>
                        <td>@report.TotalAmount.ToString("C")</td>
                        <td>@report.TotalClaims</td>
                        <td>@report.GeneratedBy</td>
                        <td>@report.ReportDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <a href="@Url.Action("DownloadReport", "Hr", new { id = report.Id })" class="btn-primary">Download CSV</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>