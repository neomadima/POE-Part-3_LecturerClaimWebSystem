@model LecturerClaimsSystem.Models.HrAnalytics
@{
    ViewData["Title"] = "HR Dashboard";
    var role = ViewBag.Role as string ?? "HR Manager";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #2D2D30;
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        .header {
            background-color: #252526;
            padding: 10px;
            border-bottom: 1px solid #007ACC;
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
        }

        .nav-tabs {
            background-color: #252526;
            padding: 0 20px;
            border-bottom: 1px solid #3E3E42;
        }

        .content {
            max-width: 1200px;
            margin: 20px auto;
            padding: 0 20px;
        }

        .btn-logout {
            background-color: #007ACC;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            border-radius: 4px;
            font-family: inherit;
            font-size: inherit;
        }

        .nav-tab {
            display: inline-block;
            padding: 10px 20px;
            background-color: #252526;
            color: white;
            text-decoration: none;
            border: 1px solid transparent;
            cursor: pointer;
        }

            .nav-tab.active {
                background-color: #2D2D30;
                border-color: #007ACC;
            }

        .quick-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin: 20px 0;
        }

        .stat-card {
            background-color: #252526;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
            border: 1px solid #3E3E42;
        }

        .stat-value {
            font-size: 32px;
            font-weight: bold;
            color: #007ACC;
            margin: 10px 0;
        }

        .stat-label {
            font-size: 14px;
            color: #ccc;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .department-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 15px;
            margin: 20px 0;
        }

        .department-card {
            background-color: #1E1E1E;
            padding: 15px;
            border-radius: 5px;
            border-left: 4px solid #007ACC;
        }

        .report-generator {
            background-color: #252526;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
            border: 1px solid #3E3E42;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: white;
            font-weight: bold;
        }

        input, select {
            width: 100%;
            background-color: #3E3E42;
            color: white;
            border: 1px solid #007ACC;
            padding: 8px;
            border-radius: 4px;
            font-family: inherit;
        }

        .btn-primary {
            background-color: #007ACC;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            font-weight: bold;
            border-radius: 4px;
            margin-right: 10px;
            text-decoration: none;
            display: inline-block;
            font-family: inherit;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            font-weight: bold;
            border-radius: 4px;
            font-family: inherit;
        }

        .alert {
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .quick-actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            flex-wrap: wrap;
        }

        h3, h4, h5 {
            margin-top: 0;
            color: white;
        }

        p {
            color: #ccc;
            line-height: 1.5;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="header-content">
            <h2>HR Manager Dashboard</h2>
            <div>Automated Claim Processing & Lecturer Management</div>
            <a href="/Account/Logout" class="btn-logout">Logout</a>
        </div>
    </div>

    <div class="nav-tabs">
        <a href="javascript:void(0)" class="nav-tab active">Dashboard</a>
        <a href="@Url.Action("Lecturers", "Hr")" class="nav-tab">Lecturer Management</a>
        <a href="@Url.Action("PaymentReports", "Hr")" class="nav-tab">Payment Reports</a>
    </div>

    <div class="content">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <h3>HR Analytics Dashboard</h3>


        <div class="quick-stats">
            <div class="stat-card">
                <div class="stat-value">@Model.TotalLecturers</div>
                <div class="stat-label">Total Lecturers</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">@Model.ActiveLecturers</div>
                <div class="stat-label">Active Lecturers</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">@Model.TotalClaimsThisMonth</div>
                <div class="stat-label">Claims This Month</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">@Model.TotalPaymentsThisMonth.ToString("C")</div>
                <div class="stat-label">Payments This Month</div>
            </div>
        </div>


        <h4>Department Summary</h4>
        @if (Model.DepartmentSummaries != null && Model.DepartmentSummaries.Any())
        {
            <div class="department-grid">
                @foreach (var dept in Model.DepartmentSummaries)
                {
                    <div class="department-card">
                        <h5>@dept.Department</h5>
                        <div>Lecturers: @dept.LecturerCount</div>
                        <div>Claims: @dept.TotalClaims</div>
                        <div>Payments: @dept.TotalPayments.ToString("C")</div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No department data available.</p>
        }

        <!-- Report Generator -->
        <div class="report-generator">
            <h4>Generate Payment Report</h4>
            <form method="post" action="@Url.Action("GeneratePaymentReport", "Hr")">
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
                    <div class="form-group">
                        <label for="periodStart">Period Start:</label>
                        <input type="date" id="periodStart" name="periodStart" value="@DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd")" required />
                    </div>
                    <div class="form-group">
                        <label for="periodEnd">Period End:</label>
                        <input type="date" id="periodEnd" name="periodEnd" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                    </div>
                </div>
                <button type="submit" class="btn-success">Generate Payment Report</button>
            </form>
        </div>

        <!-- Quick Actions -->
        <div class="quick-actions">
            <a href="@Url.Action("Lecturers", "Hr")" class="btn-primary">Manage Lecturers</a>
            <a href="@Url.Action("PaymentReports", "Hr")" class="btn-primary">View Payment Reports</a>
        </div>
    </div>
</body>
</html>